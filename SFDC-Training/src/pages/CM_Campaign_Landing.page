<apex:page standardController="Campaign" extensions="CampaignLandingPageController">
    <apex:form >
        <apex:pageBlock title="User Driven Campaigns" id="campaign_lists">
            <apex:pageBlockSection columns="1" >
                <apex:selectList label="{!$Label.Filter}" value="{! strFilterId }" size="1">
                    <apex:selectOptions value="{! listOfFilterOptions }"/>
                    <apex:actionSupport event="onchange" reRender="campaign_lists"/>
                </apex:selectList> 
            </apex:pageBlockSection>
            <apex:pageBlockSection columns="1">
                 <apex:pageBlockTable value="{! campaigns }" var="cmp">
                     <apex:column >
                         <apex:outputLink target="_blank" value="CM_Campaign_Detail?id={! cmp.Id }">{! cmp.Name }</apex:outputLink>
                     </apex:column>
                    <apex:column value="{! cmp.Status }"/>
                    <apex:column value="{! cmp.StartDate }"/>
                    <apex:facet name="footer">Showing Page # {!pageNumber} of {! totalPages }</apex:facet>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
            <apex:pageBlockSection columns="5">
                <!-- Pagination -->
                <apex:outputText value="Page:  {!pageNumber} of {! totalPages }"/>
                <apex:commandButton action="{!Previous}" title="Previous" value="<" disabled="{!disablePrevious}" reRender="campaign_lists"/>  
                <apex:commandButton action="{!Next}" title="Next" value=">" disabled="{!disableNext}" reRender="campaign_lists"/>
                <apex:commandButton action="{!Beginning}" title="Beginning" value="<<" disabled="{!disablePrevious}" reRender="campaign_lists"/>
				<apex:commandButton action="{!End}" title="End" value=">>" disabled="{!disableNext}" reRender="campaign_lists"/>     
            </apex:pageBlockSection>
            
        </apex:pageBlock>
    </apex:form>
</apex:page>